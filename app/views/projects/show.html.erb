<div class="container mt-4">
  <table class="table table-bordered">
    <tbody>
      <tr>
        <th>Project Details</th>
        <td><%= render @project %></td>
      </tr>
      <tr>
        <th>Actions</th>
        <td>
          <!-- Edit and Back links with Bootstrap styling inside the table -->
          <%= link_to "Edit this project", edit_project_path(@project), class: "btn btn-warning btn-sm" %>
          <%= link_to "Back to projects", projects_path, class: "btn btn-secondary btn-sm" %>
          
          <!-- Delete button styled with Bootstrap inside the table -->
          <%= button_to "Delete this project", @project, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm mt-2" %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
